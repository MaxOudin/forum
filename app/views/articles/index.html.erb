<h2> Forum </h2>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-4">
      <div class="card mb-3" style="width: 20rem; height: 40rem; background-color: white;">
        <% if article.files.attached? %>
          <%= image_tag article.files.first, style: "width: 100%; height: 200px; object-position:center; object-fit: cover;" %>
        <% end %>
        <div class="card-body d-flex flex-column">
          <p class="card-text">Publié le <%= article.created_at.strftime("%d/%m/%Y") %></p>
          <h5 class="card-title"><%= article.title %></h5>
          <p class="card-text"><%= truncate(article.content.body.to_plain_text, length: 200) %></p>
          <div class="mt-auto">
            <div class="d-flex flex-column">
            <!-- Vérification policy pour boutons -->
            <% if policy(article).update? %>
              <div class="d-flex justify-content-end">
                <%= link_to "Modifier article", edit_article_path(article), class: "btn btn-primary", style: "margin-bottom: 1rem;" %>
              </div>
            <% end %>
            <% if policy(article).destroy? %>
              <div class="d-flex justify-content-end">
                <%= link_to "Supprimer article", article, data: { turbo_method: :delete, turbo_confirm: 'Etes vous sûr ?' }, class: "btn btn-secondary", style: "margin-bottom: 1rem;" %>
              </div>
            <% end %>
            </div>
            <div class="d-flex justify-content-end">
                <%= link_to "Voir plus", article_path(article), class:"btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
