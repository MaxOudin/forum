<!DOCTYPE html>

<html lang="fr">
  <head>
    <title>Forum</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "actiontext", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <%= render "shared/navbar" %>
  <%= render "shared/flashes" %>

  <div class="container-fluid" style="margin-bottom: 2rem; margin-top: 2rem;">
    <div class="container">

    <%= yield %>

    <hr />
    <% if user_signed_in? %>
      <div>
        <%= link_to "Se déconnecter", destroy_user_session_path, data: { turbo_method: :delete }, class:"btn btn-warning" %>
      </div>
    <% else %>
      <div>
        <%= link_to "Se connecter", new_user_session_path, class:"btn btn-warning" %>
      </div>
    <br>
      <div>
        <%= link_to "Créer un compte", new_user_registration_path, class:"btn btn-warning" %>
      </div>
    <% end %>
    </div>
  </div>
  </body>
</html>
