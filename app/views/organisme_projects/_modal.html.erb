<!-- Dans votre vue, par exemple app/views/layouts/application.html.erb -->
<div class="modal" data-controller="modal" data-modal-target="modal">  <!-- Bouton pour ouvrir le modal -->
  <button data-action="click->modal#open" class="btn btn-primary">Open Modal</button>

  <!-- Structure du modal Bootstrap -->
  <div class="modal fade" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal Title</h5>
          <button type="button" class="btn-close" data-action="click->modal#close" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <h1>C'est une Modale</h1>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-action="click->modal#close">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>
